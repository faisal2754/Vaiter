<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/double_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">



    <ImageView
        android:id="@+id/tab2icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/blackblue" />

    <TextView
        android:id="@+id/txtMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/tab2icon"
        android:layout_toRightOf="@+id/tab2icon"
        android:textColor="@color/MidBlueBlack"
        android:maxLines="1"
        android:text="Android Name"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/txtDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/tab2icon"
        android:textColor="@color/MidBlueBlack"
        android:layout_toRightOf="@+id/tab2icon"
        android:maxLines="1"
        android:text="Android Name"
        android:textSize="20sp" />

</RelativeLayout>