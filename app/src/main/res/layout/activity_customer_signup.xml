<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/logo"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="Create your new account"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/cusSFname"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_user"
                android:ems="10"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textColorHint="@color/white_pressed"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_user"
                android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/cusSLname"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_user"
                android:ems="10"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textColorHint="@color/white_pressed"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_user"
                android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/cusSEmail"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_user"
                android:ems="10"
                android:hint="Email"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:gravity="center"
                android:textColorHint="@color/white_pressed"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_lock"
                android:paddingLeft="10dp"/>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                app:hintEnabled="false"

                android:textColorHint="@color/white_pressed"
                android:textColor="@color/white"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white_pressed">

                <EditText
                    android:id="@+id/cusSPass"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_edittext"
                    android:drawableLeft="@drawable/ic_lock"
                    android:ems="10"
                    android:hint="Password"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColorHint="@color/white_pressed"
                    android:inputType="textPassword"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:paddingLeft="10dp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:hintEnabled="false"
                android:textColorHint="@color/white_pressed"
                android:textColor="@color/white"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white_pressed">
                <EditText
                    android:id="@+id/cusSPassC"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_edittext"
                    android:drawableLeft="@drawable/ic_lock"
                    android:ems="10"
                    android:hint="Confirm Password"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColorHint="@color/white_pressed"
                    android:inputType="textPassword"
                    android:layout_marginBottom="20dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:paddingLeft="10dp"/>


            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/btnCusSignUp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttonstylegradient"
                android:text="Sign Up"
                android:textAllCaps="true"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/textAlreadyMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Click here."
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginBottom="30dp" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center"
                android:orientation="horizontal"
                android:id="@+id/linearLayout">

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/twitter" />

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/instagram"
                    android:layout_marginStart="15dp" />

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/facebook"
                    android:layout_marginStart="15dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>